{
    "name": ".... ",
    "short_name": "....",
    "description": "تطبيق محادثة فوري للتواصل مع الأصدقاء",
    "start_url": "https://alqasimmall.github.io/Chat.com/",
    "id": "https://alqasimmall.github.io/Chat.com/",
    "scope": "https://alqasimmall.github.io/Chat.com/",
    "display": "standalone",
    "display_override": ["standalone", "minimal-ui", "fullscreen"],
    "orientation": "portrait-primary",
    "dir": "rtl",
    "lang": "ar",
    "theme_color": "#7C4DFF",
    "background_color": "#7C4DFF",
    "categories": ["social", "communication"],

    "permissions": [
        "notifications",
        "microphone",
        "camera",
        "storage",
        "mediaDevices",
        "geolocation",
        "contacts",
        "background-sync",
        "push",
        "wake-lock",
        "device-info",
        "persistent-storage"
    ],

    "platform_permissions": [
        {
            "platform": "android",
            "permissions": [
                "android.permission.INTERNET",
                "android.permission.ACCESS_NETWORK_STATE",
                "android.permission.WAKE_LOCK",
                "android.permission.VIBRATE",
                "android.permission.RECORD_AUDIO",
                "android.permission.CAMERA",
                "android.permission.MODIFY_AUDIO_SETTINGS",
                "android.permission.READ_EXTERNAL_STORAGE",
                "android.permission.WRITE_EXTERNAL_STORAGE",
                "android.permission.ACCESS_FINE_LOCATION",
                "android.permission.ACCESS_COARSE_LOCATION",
                "android.permission.READ_CONTACTS",
                "android.permission.FOREGROUND_SERVICE",
                "android.permission.USE_FULL_SCREEN_INTENT",
                "android.permission.POST_NOTIFICATIONS"
            ]
        },
        {
            "platform": "ios",
            "permissions": [
                "NSCameraUsageDescription",
                "NSMicrophoneUsageDescription",
                "NSPhotoLibraryUsageDescription",
                "NSLocationWhenInUseUsageDescription",
                "NSLocationAlwaysUsageDescription",
                "NSContactsUsageDescription",
                "NSFaceIDUsageDescription",
                "NSMotionUsageDescription"
            ]
        }
    ],

    "launch_handler": {
        "client_mode": ["navigate-existing", "auto"]
    },

    "icons": [
        {
            "src": "https://firebasestorage.googleapis.com/v0/b/messageemeapp.appspot.com/o/profiles%2F%D8%AE%D9%84%D9%81%D9%8A%D8%A7%D8%AA%20%D8%A7%D9%8A%D9%81%D9%88%D9%86%2014%20%D8%A8%D8%B1%D9%88%20%D9%85%D8%A7%D9%83%D8%B3%20%D8%A7%D8%B5%D9%84%D9%8A%D8%A9%20%D9%81%D8%AE%D9%85%D9%87%20%D8%A8%D8%AF%D9%82%D8%A9%20HD_1.jpg?alt=media&token=fa611f61-008d-4976-a6cf-f32833ae297c",
            "sizes": "72x72",
            "type": "image/png",
            "purpose": "any"
        },
        // ... (باقي الأيقونات كما هي)
    ],

    "screenshots": [
        {
            "src": "https://firebasestorage.googleapis.com/v0/b/messageemeapp.appspot.com/o/profiles%2F%D8%AE%D9%84%D9%81%D9%8A%D8%A7%D8%AA%20%D8%A7%D9%8A%D9%81%D9%88%D9%86%2014%20%D8%A8%D8%B1%D9%88%20%D9%85%D8%A7%D9%83%D8%B3%20%D8%A7%D8%B5%D9%84%D9%8A%D8%A9%20%D9%81%D8%AE%D9%85%D9%87%20%D8%A8%D8%AF%D9%82%D8%A9%20HD_1.jpg?alt=media&token=fa611f61-008d-4976-a6cf-f32833ae297c",
            "sizes": "1280x720",
            "type": "image/png",
            "platform": "wide",
            "label": "واجهة المحادثة"
        }
    ],

    "related_applications": [],
    "prefer_related_applications": false,

    "shortcuts": [
        {
            "name": "فتح المحادثات",
            "short_name": "محادثات",
            "description": "عرض المحادثات الحالية",
            "url": "/chat",
            "icons": [{ "src": "https://firebasestorage.googleapis.com/v0/b/messageemeapp.appspot.com/o/profiles%2F%D8%AE%D9%84%D9%81%D9%8A%D8%A7%D8%AA%20%D8%A7%D9%8A%D9%81%D9%88%D9%86%2014%20%D8%A8%D8%B1%D9%88%20%D9%85%D8%A7%D9%83%D8%B3%20%D8%A7%D8%B5%D9%84%D9%8A%D8%A9%20%D9%81%D8%AE%D9%85%D9%87%20%D8%A8%D8%AF%D9%82%D8%A9%20HD_1.jpg?alt=media&token=fa611f61-008d-4976-a6cf-f32833ae297c", "sizes": "96x96" }]
        }
    ],

    "handle_links": "preferred",
    
    "share_target": {
        "action": "/share-target/",
        "method": "GET",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url",
            "files": [
                {
                    "name": "media",
                    "accept": ["image/*", "video/*", "audio/*"]
                }
            ]
        }
    },

    "protocol_handlers": [
        {
            "protocol": "web+chat",
            "url": "/chat?id=%s"
        }
    ],

    "file_handlers": [
        {
            "action": "/open-file",
            "accept": {
                "image/*": [".jpg", ".jpeg", ".png", ".gif"],
                "audio/*": [".mp3", ".wav"],
                "video/*": [".mp4", ".webm"],
                "application/pdf": [".pdf"]
            }
        }
    ],

    "background_fetch": {
        "service_worker": "service-worker.js"
    }
}